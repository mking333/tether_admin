<h3>Participants: <%= Participant.count %> in <%= @trip_count %> trips</h3>

<table>
  <thead>
  <tr>
    <th>Email</th>
    <th>PIN</th>
    <th>Name</th>
    <th>Leader</th>
    <th>Current lat</th>
    <th>Current long</th>
    <th>Departing at</th>
    <th>Arriving at</th>
    <th>Joined at</th>
    <th>Quit at</th>
    <th>Checkin at</th>
    <th>Trip</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.email %></td>
        <td><%= participant.pin %></td>
        <td><%= participant.name %></td>
        <td><%= participant.leader %></td>
        <td><%= participant.current_lat %></td>
        <td><%= participant.current_long %></td>
        <td><%= participant.depart_at %></td>
        <td><%= participant.arrive_at %></td>
        <td><%= participant.join_at %></td>
        <td><%= participant.quit_at %></td>
        <td><%= participant.checkin_at %></td>
        <td><%= participant.trip.name %></td>
        <td><%= participant.status %></td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @participants %>
<br>

<%= link_to 'New Participant', new_participant_path %>
